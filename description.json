      "default": 3,
      "ui_exposed": true
    },
    {
      "name": "batch_size",
      "type": "int",
      "optional": true,
      "flag": "--batch-size",
      "short_flag": "--batch-size",
      "action": "store",
      "help": "Batch size",
      "default": 128,
      "ui_exposed": true
    },
    {
      "name": "lr",
      "type": "float",
      "optional": true,
      "flag": "--lr",
      "short_flag": "--lr",
      "action": "store",
